<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="Admin.Fragments_Admin.FragmentSchemeAdd">

   <LinearLayout
       android:id="@+id/li1"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:background="@color/purple_200"
       android:orientation="vertical">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:gravity="center"
          android:text="Scheme Adding Page"
          android:textColor="@color/black"
          android:textStyle="bold" />
   </LinearLayout>

   <LinearLayout
       android:id="@+id/li2"
       android:layout_below="@id/li1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="100dp"
       android:orientation="vertical">

      <EditText
          android:id="@+id/edtschemename"
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginStart="70dp"
          android:gravity="center"
          android:hint="Scheme Name"
          android:textColor="@color/purple_700"
          android:textStyle="normal"
          android:background="@drawable/textborder"/>

      <Spinner
          android:id="@+id/spinner"
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="70dp"
          android:layout_marginTop="20dp"
          android:background="@drawable/styleborder"
          android:entries="@array/wrkcategory"
          android:padding="5dp"
          android:paddingStart="10dp"
          android:spinnerMode="dropdown"
          android:textColor="@color/black"
          android:textSize="18sp"
          android:textStyle="bold" />

      <Spinner
          android:id="@+id/edtschemeType"
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginStart="70dp"
          android:gravity="center"
          android:entries="@array/schemeType"
          android:textColor="@color/purple_700"
          android:textStyle="normal"
          android:spinnerMode="dropdown"
          android:dropDownSelector="@color/black"
          android:background="@drawable/textborder"/>

      <EditText
          android:id="@+id/edtschemecriteria"
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginStart="70dp"
          android:gravity="center"
          android:hint="Scheme Criteria"
          android:textColor="@color/purple_700"
          android:textStyle="normal"
          android:background="@drawable/textborder"/>

<!--      <EditText-->
<!--          android:id="@+id/edtequitment"-->
<!--          android:layout_width="250dp"-->
<!--          android:layout_height="wrap_content"-->
<!--          android:layout_marginTop="20dp"-->
<!--          android:layout_marginStart="70dp"-->
<!--          android:gravity="center"-->
<!--          android:hint="Equitment Name"-->
<!--          android:textColor="@color/purple_700"-->
<!--          android:textStyle="normal"-->
<!--          android:visibility="visible"-->
<!--          android:background="@drawable/textborder"/>-->

      <EditText
          android:id="@+id/edtamount"
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginStart="70dp"
          android:gravity="center"
          android:hint="Amount"
          android:textColor="@color/purple_700"
          android:textStyle="normal"
          android:visibility="visible"
          android:background="@drawable/textborder"/>

   </LinearLayout>

   <LinearLayout
       android:id="@+id/ssss"
       android:layout_width="match_parent"
       android:layout_height="80dp"
       android:layout_below="@+id/li2"
       android:layout_marginTop="-1dp"
       android:orientation="horizontal">

      <EditText
          android:id="@+id/edtfrom"
          android:layout_width="120dp"
          android:layout_height="50dp"
          android:layout_marginStart="70dp"
          android:layout_marginTop="20dp"
          android:background="@drawable/textborder"
          android:gravity="center"
          android:hint="Anual Income from"
          android:textColor="@color/purple_700"
          android:textStyle="normal" />

      <EditText
          android:id="@+id/edtto"
          android:layout_width="120dp"
          android:layout_height="50dp"
          android:layout_marginStart="20dp"
          android:layout_marginTop="20dp"
          android:background="@drawable/textborder"
          android:gravity="center"
          android:hint="Anual Income to"
          android:textColor="@color/purple_700"
          android:textStyle="normal" />

   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/ssss"
       android:orientation="vertical">

      <Button
          android:id="@+id/btnsubmit"
          android:layout_width="140dp"
          android:layout_height="30dp"
          android:layout_marginStart="130dp"
          android:layout_marginTop="30dp"
          android:background="@drawable/background_button"
          android:gravity="center"
          android:text="Submit" />
   </LinearLayout>


</RelativeLayout>
