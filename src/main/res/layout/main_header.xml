<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gradientbackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/pic"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginStart="35dp"
        android:text="Sandeep"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/Position"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Admin"
        android:layout_marginTop="10dp"
        android:layout_marginStart="35dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="normal"/>

</LinearLayout>


<LinearLayout
android:id="@+id/lytuser"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.0"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/lytname"
app:layout_constraintVertical_bias="0.063"
app:layout_constraintWidth_percent=".8">

<EditText
    android:id="@+id/editUsername"
    android:layout_width="267dp"
    android:layout_height="49dp"
    android:background="@drawable/textborder"
    android:layout_marginTop="10dp"
    android:drawableLeft="@android:drawable/btn_star_big_on"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:text="username"
    android:textSize="16sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/lytuser"
    app:layout_constraintVertical_bias="0.06"
    app:layout_constraintWidth_percent=".8" />
</LinearLayout>
    <LinearLayout
android:id="@+id/lytpass"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.0"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/lytname"
app:layout_constraintVertical_bias="0.266"
app:layout_constraintWidth_percent=".8">

<EditText
    android:id="@+id/editpass"
    android:layout_width="267dp"
    android:layout_height="49dp"
    android:background="@drawable/textborder"
    android:drawableLeft="@drawable/ic_security"
    android:layout_marginTop="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:text="Password"
    android:textSize="16sp"
    android:inputType="textPassword"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/lytpass"
    app:layout_constraintVertical_bias="0.06"
    app:layout_constraintWidth_percent=".8" />
</LinearLayout>

<Button
    android:id="@+id/submit"

    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/background_button"
    android:text="submit"
    android:textSize="15dp" />

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="40dp"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/btnlogout"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:cardCornerRadius="540dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/lightWhite">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/logout"
            android:backgroundTint="@color/purple_200"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/txtlogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_marginTop="2dp"
            android:layout_marginStart="3dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal"/>

    </LinearLayout>


</LinearLayout>