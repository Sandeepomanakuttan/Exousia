<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border"
    android:orientation="vertical"
    tools:context="UserSection.Registraction.innerRegpage1">


    <TextView
        android:id="@+id/txtReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:text="Sign up"
        android:textColor="@color/purple_200"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_below="@+id/txtReg"
        android:layout_alignParentStart="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="37dp"
        app:srcCompat="@drawable/ui" />

    <EditText
        android:id="@+id/edtPh"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="157dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/styleborder"
        android:gravity="center"
        android:inputType="number"
        android:hint="Enter Your Ph No" />

    <EditText
        android:id="@+id/edtPass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtPh"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="51dp"
        android:background="@drawable/styleborder"
        android:gravity="center"
        android:inputType="textPassword"
        android:hint="Enter Your Password" />

    <EditText
        android:id="@+id/edtcmpPass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtPass"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="51dp"
        android:background="@drawable/styleborder"
        android:gravity="center"
        android:inputType="textPassword"
        android:hint="Confirm PassWord" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtcmpPass"
        android:layout_alignStart="@+id/edtcmpPass"
        android:layout_alignEnd="@+id/edtcmpPass"
        android:layout_marginStart="70dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="81dp"
        android:gravity="center"
        android:background="@drawable/background_button"
        android:text="Sign up" />


</RelativeLayout>